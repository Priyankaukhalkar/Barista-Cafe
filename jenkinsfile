def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger'
    ]
pipeline {
    agent any
     environment {
        SCANNER_HOME = tool 'sonarqube'
    }
    stages {
        stage('git checkout') {
            steps {
             git 'https://github.com/Priyankaukhalkar/Barista-Cafe.git'
            }
        }
         stage('compile') {
            steps {
              sh 'mvn compile'
            }
        }
         stage('code analysis') {
            steps {
              withSonarQubeEnv('sonarqube') {
               sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Barista-Cafe \
               -Dsonar.java.binaries=. \
               -Dsonar.projectKey=Barista-Cafe'''
              }
            }
        }
        stage('package') {
            steps {
              sh 'mvn install'
            }
        }
         stage('docker build') {
            steps {
             script {
                 withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                    sh 'docker build -t spring-boot .'
                  }
              }
            }
        }
         stage('docker push') {
            steps {
             script {
               withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                    sh 'docker tag barista-cafe priyanka245/springbootapp:1.0'
                    sh 'docker push priyanka245/baristacafeapp:1.0'
                  }
              }
            }
         }    
        stage('docker compose') {
            steps {
             script {
                 withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                    sh 'docker-compose up -d'
                  }
              }
            }
        }

    }	
 
    post {
        always {
            echo 'slack Notification.'
            slackSend channel: '#ci-cd-pipeline',
            color: COLOR_MAP [currentBuild.currentResult],
            message: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URl}"
            
        }
    }
}
